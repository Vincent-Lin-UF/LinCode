{
  "manifest_version": 3,
  "name": "LinCode Daily",
  "version": "1.0",
  "description": "Share your LeetCode's with your friends! :)",
  "permissions": ["scripting"],
  "host_permissions": [
    "https://leetcode.com/problems/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://leetcode.com/problems/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
} 